<!DOCTYPE html>

<html lang="en">

{{>Head}}

<body>

  <div class="row" id="cuerpoRegistro">

    <div class="col-sm-6" id="RegistroForm">

      <a href="/">

        <h1 id="registroHome">Skate Park</h1>

      </a>

      <div>

        <h2>Registro</h2>
        <hr class="w-50 mx-auto" />

        <form action="/usuario" method="POST" enctype="multipart/form-data">

          <div class="form-group row w-75 m-auto">

            <div class="form-group col-12 col-sm-6">
              <label>Email</label>
              <input name="email" class="form-control m-auto" />
            </div>

            <div class="form-group col-12 col-sm-6">
              <label>Nombre</label>
              <input name="nombre" class="form-control m-auto" />
            </div>

            <div class="form-group col-12 col-sm-6">
              <label>Password</label>
              <input name="contrasena" class="form-control m-auto" type="password" />
            </div>

            <div class="form-group col-12 col-sm-6">
              <label>Repita la password</label>
              <input name="confirmoContrasena" class="form-control m-auto" type="password" />
            </div>

            <div class="form-group col-12 col-sm-6">
              <label>Años de experiencia</label>
              <input name="anos_experiencia" class="form-control m-auto" />
            </div>

            <div class="form-group col-12 col-sm-6">
              <label>Especialidad</label>
              <input name="especialidad" class="form-control m-auto" />
            </div>

            <div class="form-group col-12 col-sm-12">
              <label>Foto de perfil</label>
              <input name="imagen" class="mt-3" type="file" />
            </div>

          </div>

          <button type="submit" id="registrar" class="btn my-3">Registrarme</button>
          <p><a href="/login"> Iniciar sesión</a></p>

        </form>

      </div>

    </div>

    <div class="imagenMitad col-sm-6"></div>

  </div>

  {{>Footer}}

  {{>BodyCDN}}

</body>

</html>